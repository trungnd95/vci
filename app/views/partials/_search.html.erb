<%= form_tag search_publications_path, method: :post, class: "search-form" do %>
  <%= search_field_tag :data, params[:data], placeholder: "Nhập gì đó ...", class: "form-control" %>
  <%= select_tag :type, options_for_select([['Lựa chọn', ''],['Tên tác giả', 'author'], ['Tiêu đề', 'publication']],params[:type]), {class: "form-control"} %>
  <%= submit_tag "Tìm kiếm", class: "btn btn-primary form-control search-button" %>
<% end %>
